package require tcltest
package require TclOO

source $::env(TRAILS_HOME)/json/json.tcl

namespace import ::tcltest::*

namespace import ::trails::json::* 


test json_tcl2json {} -body {
	
	set data {
		id 1
		name {Ricardo Bocchi}
		age 37
		enabled true
		group {
			id 1
			description {Developer}
		}
		friends {
			{id 1 name jonh}
			{id 2 name jully}
			{id 3 name fred}
		}
	}

	set tpl {
		id int
		name str
		age str
		enabled bool
		group {
			dict {id int description str}
		}
		friends {
			list {id int name str}
		}
	}

	tcl2json $data -tpl $tpl -type dict

} -result {{
    "id"      : 1,
    "name"    : "Ricardo Bocchi",
    "age"     : "37",
    "enabled" : true,
    "group"   : {
        "id"          : 1,
        "description" : "Developer"
    },
    "friends" : [{
        "id"   : 1,
        "name" : "jonh"
    },{
        "id"   : 2,
        "name" : "jully"
    },{
        "id"   : 3,
        "name" : "fred"
    }]
}}

